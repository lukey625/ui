        ]
        
        cursor = self.db_connection.cursor()
        for trade in sample_trades:
            cursor.execute("""
                INSERT INTO trades (bot_id, exchange, symbol, side, amount, price, pnl, strategy)
                VALUES (?, ?, ?, ?, ?, ?, ?, ?)
            """, trade)
        
        self.db_connection.commit()
        logger.info("Sample trades added")
    
